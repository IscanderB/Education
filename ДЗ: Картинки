using System;

namespace Study
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int countPicturesInRaw = 3;
            int totalPictures = 52;
            int totalCountRawsPictures;
            int remnantPictures;

            totalCountRawsPictures = totalPictures / countPicturesInRaw;
            remnantPictures = totalPictures % countPicturesInRaw;

            Console.WriteLine($"В каждом ряду по {countPicturesInRaw} картины. " +
                              $"У вас всего {totalPictures} картин! " +
                              $"Итого у вас получается {totalCountRawsPictures} рядов и остаток {remnantPictures} картин");
        }
    }
}
