using System;

namespace Study
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int countPicturesInRaw = 3;
            int totalPictures = 52;
            int countRaws;
            int remnantPictures;
            countRaws = totalPictures / countPicturesInRaw;
            remnantPictures = totalPictures % countPicturesInRaw;
            Console.WriteLine($"В каждом ряду по {countPicturesInRaw} картины. " +
                              $"У вас всего {totalPictures} картин! " +
                              $"Итого у вас получается {countRaws} рядов и остаток {remnantPictures} картин");
        }
    }
}
