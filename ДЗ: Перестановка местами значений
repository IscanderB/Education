using System;

namespace Study
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name = "Popov";
            string surname = "Ivan";
            string clipboardName = name;

            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");

            name = surname;
            surname = clipboardName;

            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");

            string coffeeCup = "Чай";
            string teaCup = "Кофе";
            string clipboardCup = coffeeCup;

            Console.WriteLine($"У вас в кофейной чашке - {coffeeCup}, а в чайной чашке - {teaCup}");

            coffeeCup = teaCup;
            teaCup = clipboardCup;

            Console.WriteLine($"У вас в кофейной чашке - {coffeeCup}, а в чайной чашке - {teaCup}");
        }
    }
}
