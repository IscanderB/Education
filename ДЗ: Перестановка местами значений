using System;

namespace Study
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name = "Popov";
            string surname = "Ivan";
            string swap = name;
            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");
            name = surname;
            surname = swap;
            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");

            string coffeeCup = "Чай";
            string teaCup = "Кофе";
            string swapDrink = coffeeCup;
            Console.WriteLine($"У вас в кофейной чашке - {coffeeCup}, а в чайной чашке - {teaCup}");
            coffeeCup = teaCup;
            teaCup = swapDrink;            
            Console.WriteLine($"У вас в кофейной чашке - {coffeeCup}, а в чайной чашке - {teaCup}");
        }
    }
}
